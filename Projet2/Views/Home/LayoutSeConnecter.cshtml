<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="offcanvas offcanvas-start" id="demo">
        <div class="offcanvas-header">
            <h3 class="offcanvas-title">Mon compte</h3>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <nav class="navbar">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Mon profil</a>
                    </li>
                    <li class="nav-item">
                        <div class="col">@Html.ActionLink("Mon historique de commande", "HistoriqueDeCommande", "Home",null, new {@class="nav-link"})</div>
                    </li>
                    <li class="nav-item">
                        <div class="col">@Html.ActionLink("Modifier mon profil", "ModifierProfil", "Home",null, new {@class="nav-link"})</div>
                    </li>
                    <li class="nav-item">
                        <div class="col">@Html.ActionLink("Modifier mon mot de passe", "ModifierMotDePasse", "Home",null, new {@class="nav-link"})</div>
                    </li>
                    <li class="nav-item">
                        <div class="col">@Html.ActionLink("Déconnexion", "Deconnexion", "Home",null, new {@class="nav-link"})</div>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <div class="container-fluid mt-3">
        <h3>Dashboard</h3>
        <br />
        <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#demo">
            Voir les fonctionnalités de mon compte
        </button>
    </div>

</body>
</html>
