@model Projet2.Models.Profil
@{
    Layout = "_Layout";
    ViewBag.Title = "S'inscrire";
}

<!DOCTYPE html>
<html>
<body>
    @using (Html.BeginForm()){
    <fieldset>
        <legend>Création de compte AMAP-Online</legend>
        <table>
            <tbody>
                <tr>
                    <td>Êtes-vous :</td>
                    <td><input checked="checked" type="radio" name="inscriptiongroup" value="1" id="particulier"><label for="particulier">Particulier</label></td>
                    <td><input type="radio" name="inscriptiongroup" value="2" id="ce"><label for="ce">Comité d'entreprise</label></td>
                    <td><input type="radio" name="inscriptiongroup" value="3" id="producteur"><label for="producteur">Producteur</label></td>
                </tr>
            </tbody>
        </table>
        <table>
            <tbody>
                <form method="POST">
                <tr>
                    <div>
                    <td>@Html.LabelFor(m => Model.Prenom)</td>
                    <td>@Html.TextBoxFor(m => Model.Prenom)</td>
                    <td>@Html.ValidationMessageFor(m => Model.Prenom)</td>
                    </div>
                </tr>
                <tr>
                    <div>
                    <td>@Html.LabelFor(m => Model.Nom)</td>
                    <td>@Html.TextBoxFor(m => Model.Nom)</td>
                    <td>@Html.ValidationMessageFor(m => Model.Nom)</td>
                    </div>
                </tr>
                <tr>
                    <div>
                    <td>@Html.LabelFor(m => Model.Mail)</td>
                    <td>@Html.TextBoxFor(m => Model.Mail)</td>
                    <td>@Html.ValidationMessageFor(m => Model.Mail)</td>
                    </div>
                </tr>
                <tr>
                    <div>
                    <td>@Html.LabelFor(m => Model.Adresse)</td>
                    <td>@Html.TextBoxFor(m => Model.Adresse)</td>
                    <td>@Html.ValidationMessageFor(m => Model.Adresse)</td>
                    </div>
                </tr>
                <tr>
                    <div>
                    <td>@Html.LabelFor(m => Model.Codepostal)</td>
                    <td>@Html.TextBoxFor(m => Model.Codepostal, new { type="number", min="0", max="100000" })</td>
                    <td>@Html.ValidationMessageFor(m => Model.Codepostal)</td>
                    </div>
                </tr>
                <tr>
                    <div>
                    <td>@Html.LabelFor(m => Model.Telephone)</td>
                    <td>@Html.TextBoxFor(m => Model.Telephone, new { type="number", min="0", max="10000000000" })</td>
                    <td>@Html.ValidationMessageFor(m => Model.Telephone)</td>
                    </div>
                </tr>
                <tr>
                    <div>
                    <td><label for="entreprise">Nom de votre entreprise</label></td>
                    <td><input type="text" id="entreprise" name="entreprise"></td>
                    </div>
                </tr>
                <tr>
                    <div>
                    <td><label for="siret">Numéro SIRET</label></td>
                    <td><input type="number" id="siret" name="siret"></td>
                    </div>
                </tr>
               
                </form>
            </tbody>
        </table>
        <br />
        <input type="submit" value="Envoyer le formulaire d'inscription">
        <br>
    </fieldset>}
    <div>@Html.ActionLink("Déjà inscrit ? Veuillez vous connecter en cliquant ici", "SeConnecter")</div>
</body>
</html>
