@{
    Layout = "_Layout";
    ViewBag.Title = "Accueil";
}

<!DOCTYPE html>
<html>
<body>
    <fieldset>
        <legend>Création de compte AMAP-Online</legend>
        <table>
            <tbody>
                <tr>
                    <td>Êtes-vous :</td>
                    <td><label for="particulier">Particulier</label><input type="radio" name="inscriptiongroup" value="1" id="particulier"></td>
                    <td><label for="ce">Comité d'entreprise</label><input type="radio" name="inscriptiongroup" value="2" id="ce"></td>
                    <td><label for="producteur">Producteur</label><input type="radio" name="inscriptiongroup" value="3" id="producteur"></td>
                </tr>
            </tbody>
        </table>
        <table>
            <tbody>
                <form method="POST">
                <tr>
                    <div>
                    <td><label for="nom">Nom</label></td>
                    <td><input id="nom" type="text"></td>
                    </div>
                </tr>
                <tr>
                    <div>
                    <td><label for="prenom">Prénom</label></td>
                    <td><input id="prenom" type="text"></td>
                    </div>
                </tr>
                <tr>
                    <div>
                    <td><label for="email">Adresse mail</label></td>
                    <td><input id="email" type="email"></td>
                    </div>
                </tr>
                <tr>
                    <div>
                    <td><label for="adressepostale">Adresse postale</label></td>
                    <td><input id="adressePostale" type="text"></td>
                    </div>
                </tr>
                <tr>
                    <div>
                    <td><label for="codepostal">Code postal</label></td>
                    <td>
                        <input id="email" type="number">
                    </td>
                    </div>
                </tr>
                <tr>
                    <div>
                    <td><label for="mdp">Créer un mot de passe</label></td>
                    <td><input type="password"></td>
                    </div>
                </tr>
                <tr>
                    <div>
                    <td><label for="confirmationmdp">Confirmer le mot de passe</label></td>
                    <td><input type="password"></td>
                    </div>
                </tr>
                </form>
            </tbody>
        </table>
        <input type="submit" value="Envoyer le formulaire d'inscription">
    </fieldset>
</body>
</html>
