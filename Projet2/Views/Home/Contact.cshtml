@{
    Layout = "_Layout";
    ViewBag.Title = "Nous contacter";
}
<div class="container">
    <div><h1>Nous contacter</h1></div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <div id="map-container-google-1" class="z-depth-1-half map-container" style="height: 1000px, width: 1000px">
                <iframe src="https://maps.google.com/maps?q=tarbes&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0"
                        style="border:0" allowfullscreen></iframe>
            </div>
        </div>
        <br />
        <div class="col-md-6">
            <form class="my-form">
                <div class="form-group">
                    <label for="form-name">Nom</label>
                    <input type="text" class="form-control" id="form-name" placeholder="Votre nom">
                </div>
                <div class="form-group">
                    <label for="form-email">Adresse Mail</label>
                    <input type="email" class="form-control" id="form-email" placeholder="Votre adresse mail">
                </div>
                <div class="form-group">
                    <label for="form-subject">Téléphone</label>
                    <input type="text" class="form-control" id="form-subject" placeholder="Numéro de téléphone">
                </div>
                <div class="form-group">
                    <label for="form-message">Ecrivez votre message</label>
                    <textarea class="form-control" id="form-message" placeholder="Votre message"></textarea>
                </div>
                <br />
                <button class="btn btn-secondary" type="submit">Envoyer le message</button>
            </form>
        </div>
    </div>
</div>
<br />

<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card">
            <img src="~/images/users/mail2.jpg" class="card-img-top" alt="logoMail" width="150" height="150">
            <div class="card-body">
                <h5 class="card-title">Par mail</h5>
                <p class="card-text">amap-online@gmail.com</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <img src="~/images/users/telephone.png" class="card-img-top" alt="logoTelephone" width="150" height="150">
            <div class="card-body">
                <h5 class="card-title">Par téléphone</h5>
                <p class="card-text">01 23 45 67 89</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <img src="~/images/users/logooiseau.jpg" class="card-img-top" alt="logoOiseau" width="150" height="150">
            <div class="card-body">
                <h5 class="card-title">Par vol d'oiseau</h5>
                <p class="card-text">
                    <p>Réseau AMAP-Online</p>
                    <p>99 Rue du Futur Développeur Java</p>
                    <p>01234 Isika</p>
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .my-form {
        color: #305896;
    }

        .my-form .btn-default {
            background-color: #305896;
            color: #fff;
            border-radius: 0;
        }

            .my-form .btn-default:hover {
                background-color: #4498C6;
                color: #fff;
            }

        .my-form .form-control {
            border-radius: 0;
        }
</style>

